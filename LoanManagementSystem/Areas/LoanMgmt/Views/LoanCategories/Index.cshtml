@model IEnumerable<LoanManagementSystem.Models.LoanCategory>

@{
    ViewData["Title"] = "Index";
}

@*<h1>Index</h1>*@

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LoanName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LoanName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LoanId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LoanId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LoanId">Delete</a>
                |
                <a class="btn btn-sm btn-warning" asp-area="LoanMgmt" asp-controller="Plans" 
                       asp-action="GetPlanOfCategory" 
                       asp-route-filterLoanId="@item.LoanId">View Plans</a>
            </td>
        </tr>
}
    </tbody>
</table>
